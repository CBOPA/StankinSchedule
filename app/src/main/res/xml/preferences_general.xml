            android:entryValues="@array/pref_dark_mode_list_entry"
            android:defaultValue="pref_system_default"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>