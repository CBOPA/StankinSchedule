<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/schedule_item"
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/schedule_item_padding">

        <TextView
            android:id="@+id/schedule_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/schedule_item_text_padding"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            tools:text="ИДБ-17-09"/>

        <com.vereshchagin.nikolay.stankinschedule.view.FavoriteButton
            style="?android:attr/actionButtonStyle"
            android:id="@+id/favorite_schedule"
            android:layout_width="?listPreferredItemHeightSmall"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:button="@null" />

        <ImageView
            android:id="@+id/moving_handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_swipe_reorder"
            android:contentDescription="@string/moving_handler" />

    </LinearLayout>

</layout>

