<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/schedule_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardMaxElevation="0dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp" />

        <com.github.nikololoshka.pepegaschedule.utils.FavoriteButton
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/favorite_schedule"
            android:layout_width="?listPreferredItemHeightSmall"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:button="@null" />

        <ImageView
            android:id="@+id/moving_handle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_gravity="center_vertical|start"
            android:src="@drawable/ic_swipe_reorder"
            android:contentDescription="@string/moving_handler" />

    </LinearLayout>

</androidx.cardview.widget.CardView>