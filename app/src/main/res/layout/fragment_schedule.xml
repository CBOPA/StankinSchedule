<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_common_schedule"
                    android:drawablePadding="@dimen/schedule_item_padding"
                    android:paddingHorizontal="@dimen/schedule_item_layout_padding"
                    android:paddingVertical="@dimen/schedule_item_padding"
                    android:text="@string/sch_my_schedule" />

                <View
                    style="@style/Divider"/>

                <FrameLayout
                    android:id="@+id/schedules_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/empty_schedules"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/default_information_padding"
                        android:text="@string/sch_no_available"
                        tools:visibility="gone"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/schedules"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_schedule"
                        tools:itemCount="15" />

                </FrameLayout>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_common_schedule_add"
                app:backgroundTint="?android:attr/colorPrimary"
                app:layout_anchor="@id/schedules"
                app:layout_anchorGravity="bottom|end"
                app:useCompatPadding="true" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_layout_padding"
            tools:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/default_layout_padding">

                <TextView
                    style="@style/Text.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sch_selected_subgroup" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/subgroup_selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:entries="@array/subgroup_list"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/CardStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/divider"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="25dp"
                    android:showDividers="middle|end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/sch_my_schedule"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="20sp" />

                    <com.vereshchagin.nikolay.stankinschedule.utils.StatefulLayout
                        android:id="@+id/stateful_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_my_schedules"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_schedule" />

                        <TextView
                            android:id="@+id/empty_my_schedules"
                            style="@style/Text.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorCardViewBackground"
                            android:gravity="center"
                            android:padding="@dimen/default_information_padding"
                            android:text="@string/sch_no_available" />

                    </com.vereshchagin.nikolay.stankinschedule.utils.StatefulLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</layout>

