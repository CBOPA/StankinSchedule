<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vereshchagin.nikolay.stankinschedule.ui.news.review.NewsFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/news_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorToolbarContent"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/colorTextLight" >

        <com.google.android.material.tabs.TabItem
            android:text="@string/news_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.tabs.TabItem
            android:text="@string/news_deanery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/news_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>