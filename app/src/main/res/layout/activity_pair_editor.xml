<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schedule.activities.PairEditorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:useDefaultMargins="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp" />

            <AutoCompleteTextView
                android:id="@+id/edit_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/title"
                android:inputType="textPersonName"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lecturer"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                app:layout_column="0"
                app:layout_row="1" />

            <AutoCompleteTextView
                android:id="@+id/edit_text_lecturer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/lecturer"
                android:inputType="textPersonName"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                app:layout_column="0"
                app:layout_row="2" />

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/type_list"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subgroup"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                app:layout_column="0"
                app:layout_row="3" />

            <Spinner
                android:id="@+id/spinner_subgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/subgroup_list"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/classroom"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                app:layout_column="0"
                app:layout_row="4" />

            <AutoCompleteTextView
                android:id="@+id/edit_text_classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:completionThreshold="1"
                android:ems="10"
                android:hint="@string/classroom"
                android:inputType="textPersonName"
                app:layout_column="1"
                app:layout_columnSpan="2"
                app:layout_gravity="fill_horizontal"
                app:layout_row="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:textColor="@color/colorTextPrimary"
                android:textSize="18sp"
                app:layout_column="0"
                app:layout_row="5" />

            <Spinner
                android:id="@+id/spinner_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/time_start_list"
                app:layout_column="1"
                app:layout_row="5" />

            <Spinner
                android:id="@+id/spinner_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/time_end_list"
                app:layout_column="2"
                app:layout_row="5" />

        </androidx.gridlayout.widget.GridLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true" >


            <LinearLayout
                android:id="@+id/layout_dates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider"
                android:orientation="vertical"
                android:paddingBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="18sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/add_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_add_button"
                        android:text="@string/add_date" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_pair_creator_date">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/empty_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/not_dates"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:padding="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
