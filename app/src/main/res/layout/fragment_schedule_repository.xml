<?xml version="1.0" encoding="utf-8"?>
<com.github.nikololoshka.pepegaschedule.utils.StatefulLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stateful_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".schedule.repository.ScheduleRepositoryFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/repository_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_repository"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_repository_height" >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?android:attr/colorPrimary">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/repository_background"
                    android:contentDescription="@string/repository_info_bg"
                    android:scaleType="centerCrop"
                    android:alpha="0.3"
                    app:layout_collapseMode="parallax" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom" >

                    <TextView
                        android:id="@+id/repository_version"
                        style="@style/Text.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_layout_padding"
                        android:text="@string/debug_text"
                        android:textColor="?android:attr/textColorPrimaryInverse" />

                    <TextView
                        android:id="@+id/repository_last_update"
                        style="@style/Text.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_layout_padding"
                        android:text="@string/debug_text"
                        android:textColor="?android:attr/textColorPrimaryInverse" />

                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_repository"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/default_layout_padding"
            android:paddingEnd="@dimen/default_layout_padding"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="3"
            tools:listitem="@layout/item_schedule_repository" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</com.github.nikololoshka.pepegaschedule.utils.StatefulLayout>