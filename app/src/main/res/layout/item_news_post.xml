<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/default_layout_padding">

    <ImageView
        android:id="@+id/news_preview"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/news_preview" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/default_layout_padding"
        android:layout_marginBottom="@dimen/default_layout_padding"
        android:layout_toEndOf="@+id/news_preview"
        android:ellipsize="end"
        android:lines="2"
        tools:text="News title" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_title"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:lines="1"
        android:textAlignment="textEnd"
        tools:text="20/06/2020" />

</RelativeLayout>