<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/widget_pair_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/widget_schedule_type"
        android:padding="@dimen/widget_schedule_padding" >

        <TextView
            style="@style/Text"
            android:id="@+id/widget_schedule_title"
            android:text="@string/debug_text"
            android:textColor="@color/colorTextPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            style="@style/Text.Small"
            android:id="@+id/widget_schedule_time"
            android:text="@string/debug_text"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/widget_schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/widget_schedule_title"
            android:layout_toStartOf="@id/widget_schedule_classroom" />

        <TextView
            style="@style/Text.Small"
            android:id="@+id/widget_schedule_classroom"
            android:text="@string/debug_text"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/widget_schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_schedule_title"
            android:layout_alignParentEnd="true"
            android:paddingStart="@dimen/widget_schedule_padding"
            android:paddingEnd="0dp" />

        <TextView
            style="@style/Text.Small"
            android:id="@+id/widget_schedule_description"
            android:text="@string/debug_text"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/widget_schedule_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/widget_schedule_time"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_schedule_type"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/widget_pair_content"
        android:contentDescription="@string/widget_schedule_type_marker" />

</RelativeLayout>