<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/widgetColorBodyBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/widgetColorTitleBackground"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/widget_schedule_name"
            style="@style/Text.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/widget_sch_padding"
            android:text="@string/widget_schedule_title"
            android:textColor="@color/widgetColorTitleText" />

    </LinearLayout>

    <ListView
        android:id="@+id/widget_schedule_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider"
        tools:listitem="@layout/widget_item_schedule" />

</LinearLayout>